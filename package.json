{
  "name": "my-project-prettier",
  "version": "1.0.0",
  "description": "Configuration for Prettier in my project.",
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2"
  },
  "scripts": {
    "format:dbt": "prettier --write 'dbt/siebel/**/*.{yml,yaml}'",
    "format:check:dbt": "prettier --check 'dbt/siebel/**/*.{yml,yaml}'",
    "prepare": "husky install"
  },
  "lint-staged": {
    "dbt/siebel/**/*.{yml,yaml}": [
      "prettier --write"
    ]
  }
}